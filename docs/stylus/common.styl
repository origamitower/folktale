code {
  font-family: mono-font;
}

body {
  font-family: body-font;
  color: #5f5f5f;
  font-size: 16px;
}

.content {
  display: block;
  max-width: 800px;
  margin: 2em auto;
  base-content();
}

.borderless {
  border: none !important;
}

.boxes-3 {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;

  .box {
    flex-grow: 0;
    width: 33%;
    text-align: center;
    padding: 0 2em;
    align-self: flex-start;
    box-sizing: border-box;
    margin-bottom: 2em;
  }

  .box-title {
    font-weight: bold;
    margin: 0.5em 0 1.5em 0;
    text-transform: uppercase;
    font-family: sans-font;
    letter-spacing: 0.03em;
  }

  a {
    link();
  }
}


.separated-section {
  border-top: 1px solid clouds;
  margin-top: 2em;
  padding-top: 1em;
}


.info-section {
  border-left: 5px solid silver;
  background: clouds;
  padding: 1em;
}


.breadcrumbs {
  flex-grow: 1;
  font-size: 11px;
  font-family: sans-font;
  color: concrete;
  letter-spacing: 0.02em;

  .separator {
    color: silver;
  }

  a {
    link()
  }
}

.content-with-sidebar {
  max-width: 960px;

  .row-with-sidebar {
    display: flex;
  }

  .navigation-toc {
    flex-shrink: 0;
    width: 200px;
    margin-right: 4em;
    font-family: sans-font;
    font-size: 0.9em;
    margin-top: 1em;
    
    .toc-section-title {
      font-weight: bold;
      text-transform: uppercase;
      margin: 1em 0 0.4em 0;
      color: silver;
    }

    .toc-items {
      margin-bottom: 2em;
    }

    .toc-item {
      padding: 0.3em 0;
      transition: padding 0.2s ease-out;

      &:hover {
        padding-left: 9px;
        border-left: 3px solid lighten(peter-river, 50%);

        a, a:hover {
          text-decoration: none;
        }
      }
    }

    a {
      link();
    }

    .toc-current-item, .toc-current-item:hover {
      border-left: 3px solid peter-river;
      padding-left: 7px;
    }

    .toc-current-item > a {
      font-weight: bold;
    }
  }

  .content-panel {
    flex-grow: 1;

    .title::before {
      margin-left: 0px;
    }

    .meta-row {
      display: flex;
      flex-direction: row-reverse;
      flex-wrap: nowrap;
    }

    .edit-this-page {
      flex-grow: 0;
      font-size: 0.7em;
      text-align: right;
      text-transform: uppercase;
      font-family: sans-font;

      a::after {
        width: 16px;
        height: 16px;
        vertical-align: baseline;
        display: inline-block;
        background: url("../images/github-16.png") no-repeat center center;
        margin-left: 0.5em;
        content: " ";
      }
      
      a {
        link();
      }
    }
  }
}

.page-navigation {
  margin-top: 2em;
  display: flex;
  border-top: 1px dotted clouds;
  padding-top: 1em;

  .page-navigation-prev, .page-navigation-next {
    width: 50%;
    flex-grow: 1;
  }

  .page-navigation-prev {
    text-align: left;
  }

  .page-navigation-next {
    text-align: right;
  }

  .page-navigation-prev a::before,
  .page-navigation-next a::before {
    text-transform: uppercase;
    font-family: sans-font;
    color: silver;
    font-size: 10px;
    margin-bottom: 5px;
    display: block;
  }

  .page-navigation-prev a::before {
    content: "Previous";
  }

  .page-navigation-next a::before {
    content: "Next";
  }
}

#post-listing {
  list-style: none;
  margin: 0;

  .post-title {
    @extends .content .title;
    font-size: 32px;
    border-bottom: none;
    padding-bottom: 0;

    &:before {
      display: none;
    }
  }

  .published-date {
    margin-top: -1em;
    margin-bottom: 2em;
  }

  .post-item {
    border-bottom: 1px solid clouds;
    padding-bottom: 0.5em;
    margin-bottom: 1em;
  }
}

.published-date {
  font-size: 80%;
  font-family: sans-font;
  text-transform: uppercase;
  color: abestos;
  font-style: italic;
}

#blogpost-contents {
  .title {
    font-size: 32px;
  }

  .published-date {
    margin-top: -0.5em;
    margin-bottom: 3em;
  }
}